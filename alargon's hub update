local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Robojini/Tuturial_UI_Library/main/UI_Template_1"))()

local Window = Library.CreateLib("alargon's hub I Loader", "RJTheme5")

local Tab = Window:NewTab("Games")

local Section = Tab:NewSection("Hubs")

Section:NewButton("alargon's hub I Universal", "Just join to smallest server", function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/kroniksdwdwd/Alargon-s-Hub/refs/heads/main/alargon's%20hub.lua"))()
end)

Section:NewButton("alargon's hub I Roblox Army RP", "Just join to smallest server", function()
      if game.PlaceId == 18537079992 then
      loadstring(game:HttpGet("https://raw.githubusercontent.com/kroniksdwdwd/Alargon-s-Hub/refs/heads/main/alargon's%20hub.lua"))()
end)


local Tab = Window:NewTab("Credits")
local Section = Tab:NewSection("About")

-- Универсальная функция копирования
local function copyToClipboard(text)
    local input = Instance.new("TextBox")
    input.Text = text
    input.Parent = game:GetService("CoreGui")
    input:CaptureFocus()
    input:SelectAll()
    wait(0.1)
    game:GetService("UserInputService"):SetClipboard(text)
    input:ReleaseFocus()
    input:Destroy()
end

-- Кнопка для Discord
Section:NewButton("Copy Discord", "Copies discord.com/invite/SbkqJ8VjFb", function()
    copyToClipboard("https://discord.com/invite/SbkqJ8VjFb")
    game.StarterGui:SetCore("SendNotification", {
        Title = "Discord Copied",
        Text = "Invite link copied to clipboard",
        Duration = 2
    })
end)

-- Кнопка для YouTube
Section:NewButton("Copy YouTube", "Copies youtube.com/@AlargonsScripts", function()
    copyToClipboard("https://www.youtube.com/@AlargonsScripts")
    game.StarterGui:SetCore("SendNotification", {
        Title = "YouTube Copied",
        Text = "Channel link copied to clipboard",
        Duration = 2
    })
end)

-- Информация
Section:NewLabel("Developer: Alargon's Scripts")
Section:NewLabel("Discord: discord.com/invite/SbkqJ8VjFb")
Section:NewLabel("YouTube: youtube.com/@AlargonsScripts")
